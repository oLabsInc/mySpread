<style>
    .project {
        background-color: rgba(135, 206, 250, 0.103);
        border: solid 1px lightskyblue;
        width: 300px;
        max-width: 90vw;
        height: 300px;
        max-height: 50vh;
        border-radius: 1rem;
        padding: 0.5rem     ;
    }
    .card-header {
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: solid 1px lightskyblue;
        position: relative;
    }
    .card-header h5 {
        text-align: center;
        font-size: 1.25rem;
        color: lightskyblue;
    }
    .card-body {
        margin-bottom: 1rem;
        padding-bottom: 3rem;
        background-color: #111;
        box-shadow: inset 0 0 50px #000000a1;
        border-radius: 0.5rem;
        max-height: 200px;
        overflow-y: auto;
    }
    .card-body p {
        font-size: 1rem;
        padding: 0.5rem;
        
    }
    .delete-button {
        background-color: red;
        position: absolute;
        top: 0;
        left: 0;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .delete-button a {
        font-size: 1.25rem;
        font-weight: bolder;
        text-decoration: none;
        color: #fff;
    }
</style>

<div class="project card">
    <div class="card-header">
        <h5><%= project.name %></h5>
        <span class="delete-button"><a href="/projects/edit/delete/<%= project.id %>">X</a></span>
    </div>
    <div class="card-body">
        <p><%= project.description %></p>
    </div>
</div>